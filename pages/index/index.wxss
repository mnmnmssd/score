@import "post-template/post-template.wxss";

.showTost{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 80%;
  height: 50vh;
  margin: 0 auto;
  margin-top: 100rpx;
  color: #818181;
}

.headed{
  position:fixed;
  top: -8rpx;
  width: 100%;
  box-shadow: 0px 5px 8px 2px #000;
}
.posts{
   margin-top: 40rpx;
}

.heat-love{
  position: fixed;
  bottom: 35px;
  right: 15px;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0px 2px 8px 3px #818181;
}
.heat-love image{
  width: 75rpx;
  height: 75rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}